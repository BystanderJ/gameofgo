    <Style TargetType="controls:GamePiece">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:GamePiece">
                    <Grid Background="#01000000">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ColorGroup">
                                <VisualState x:Name="Black" />
                                <VisualState x:Name="White">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Ellipse"
                                                                       Storyboard.TargetProperty="(Shape.Fill)">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{StaticResource WhiteBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="BlankOrTakenGroup">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition From="Blank"
                                                      To="Taken">
                                        <Storyboard>
                                            <!--  Opacity to 1  -->
                                            <DoubleAnimation Duration="0:0:0"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                                             To="1" />

                                            <!--  Bounce out using transform  -->
                                            <DoubleAnimation Duration="0:0:1"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                             To="1">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Duration="0:0:1"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                             To="1">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="Taken"
                                                      To="Blank">
                                        <Storyboard>
                                            <!--  Opacity to 0  -->
                                            <DoubleAnimation Duration="0:0:0.5"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                                             To="0" />

                                            <!--  Shrink back in using transform  -->
                                            <DoubleAnimation Duration="0:0:0.8"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                             To="0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Duration="0:0:0.8"
                                                             Storyboard.TargetName="PART_Ellipse"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                             To="0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Blank" />
                                <VisualState x:Name="Taken">
                                    <Storyboard>
                                        <!--  Opacity to 1  -->
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="PART_Ellipse"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="1" />

                                        <!--  Set scale to 1 on X and Y  -->
                                        <DoubleAnimation Duration="0:0:0"
                                                         Storyboard.TargetName="PART_Ellipse"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                         To="1" />
                                        <DoubleAnimation Duration="0:0:0"
                                                         Storyboard.TargetName="PART_Ellipse"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                         To="1" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="HintStateGroup">
                                <VisualState x:Name="NoHint" />
                                <VisualState x:Name="Hint">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0"
                                                         Storyboard.TargetName="PART_HintEllipse"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="1" />
                                        <DoubleAnimation Duration="0:0:1"
                                                         Storyboard.TargetName="PART_HintEllipse"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                         To="1">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:1"
